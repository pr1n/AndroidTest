<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RippleView">
        <attr name="centerImageRes" format="reference" />
        <attr name="centerImageSize" format="dimension" />
        <attr name="rippleSize" format="dimension" />
        <attr name="rippleCount" format="integer" />
        <attr name="spreadColor" format="color" />
        <attr name="delayMilliSeconds" format="integer" />
    </declare-styleable>

    <declare-styleable name="LoadingView">
        <attr name="dotCount" format="enum">
            <enum name="one" value="1" />
            <enum name="two" value="2" />
            <enum name="three" value="3" />
            <enum name="four" value="4" />
            <enum name="five" value="5" />
        </attr>
        <attr name="dotRadius" format="dimension" />
        <attr name="dotPadding" format="dimension" />
        <attr name="aniDuration" format="integer" />
        <attr name="maxAniOffset" format="dimension" />
        <attr name="dotColor" format="color" />
    </declare-styleable>

